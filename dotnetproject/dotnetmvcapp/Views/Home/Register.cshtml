@model Register
@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h3>Register Page</h3>
                            <hr>
                        </div>
                    </div>
                    <form asp-controller="Home" asp-action="Register" method="post">
                        <div class="row">
                            <div class="col">
                                <label>Username</label>
                                <div>
                                    @Html.TextBoxFor(x => x.UserName)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <label> Password</label>
                                    <div>
                                        @Html.PasswordFor(x => x.Password)
                                    </div>

                                </div>

                            </div>
                            <div class="row">
                                <div class="col">
                                    <label> Confirm Password</label>
                                    <div>
                                        @Html.PasswordFor(x => x.ConfirmPassword)
                                    </div>

                                </div>

                            </div>

                            <div class="row">
                                <div class="col">
                                    <label> Email</label>
                                    <div>
                                        @Html.TextBoxFor(x => x.Email)
                                    </div>

                                </div>

                            </div>
                            <div class="row">
                                <div class="col">
                                    <label> PhoneNumber</label>
                                    <div>
                                        @Html.TextBoxFor(x => x.PhoneNumber)
                                    </div>

                                </div>

                            </div>
                            <div class="row">
                                <div class="col">
                                    <label> User Type</label>
                                    <div>
                                        @Html.DropDownListFor(x=>x.UserRole,new SelectList(
                                        new List<Object>{
                                        new { value = 0 , text = "Admin"  },
                                        new { value = 1 , text = "Delivery Boy" }
                                        },
                                        "value",
                                        "text",
                                        Model.UserRole
                                        ))
                                    </div>

                                </div>

                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-6">
                                <button class="btn btn-success btn-md">Register</button>
                            </div>
                    </form>


                </div>
            </div>
        </div>
    </div>
</div>
</div>